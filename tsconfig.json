{
  "include": [
    "src",
    "types",
    "libs"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "outDir": "./dist/",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": "./",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "*": [
        "src/*",
        "node_modules/*"
      ]
    }
  }
}